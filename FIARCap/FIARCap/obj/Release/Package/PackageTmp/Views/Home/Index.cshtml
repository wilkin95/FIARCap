@{
    ViewBag.Title = "Home Page";
}

 
<div class="container">
    <div class="row">
        <div class=" col-md-pull-4"> 
        
            <div id="imageCarousel" class="carousel slide" data-interval="5000"
                 data-ride="carousel" data-pause="hover" data-wrap="true">

                <ol class="carousel-indicators">
                    <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#imageCarousel" data-slide-to="1"></li>
                    <li data-target="#imageCarousel" data-slide-to="2"></li>
                    <li data-target="#imageCarousel" data-slide-to="3"></li>
                </ol>

                <div class="carousel-inner">

                    <div class="item active">
                        <img src="~/Media/letters.jpg" class="img-responsive" style="max-height:1080px;">
                        <div class="carousel-caption" id="orange">
                            <h3 class="orange">FIAR Companion</h3>
                            <p>"Children are made readers on the laps of their parents"</p>
                        </div>
                    </div>
                    <div class="item ">
                        <img src="~/Media/blue.jpg" class="img-responsive">
                        <div class="carousel-caption">
                            <h3>"There is no friend as loyal as a book"</h3>
                            <p>Ernest Hemmingway</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Media/adventure.jpg" class="img-responsive">
                        <div class="carousel-caption">
                            <h3>"A reader lives a thousand lives before he dies"</h3>
                            <p>George Martin</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Media/stars.jpg" class="img-responsive">
                        <div class="carousel-caption">
                            <h3>"I do believe something very magical can happen when you read a book"</h3>
                            <p>J.K. Rowling</p>
                        </div>
                    </div>

                </div>

                <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>

        </div>
    </div>
</div>


 
<div class="row">
    <div class="col-md-4">
        <h2>What It Is</h2>
        <p>
            A learning-through-literature series that utilizes award winning children's literature to teach Social Studies, Language, Art, Applied Math, and Science.
        </p>
        <p><a class="btn btn-default" href="http://fiveinarow.com/">Learn more &raquo;</a></p>
    </div>

</div>
